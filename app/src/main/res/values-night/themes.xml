<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TangoChallenge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/systemFill</item>
        <item name="colorPrimaryVariant">@color/systemFillVariant</item>
        <item name="colorOnPrimary">@color/brand</item>

        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/systemBackground</item>

        <item name="android:statusBarColor" tools:targetApi="23">@color/systemFill</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">@bool/lightStatusBar</item>

        <item name="android:navigationBarColor" tools:targetApi="o_mr1">@color/systemFill</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">@bool/lightStatusBar
        </item>
    </style>
</resources>